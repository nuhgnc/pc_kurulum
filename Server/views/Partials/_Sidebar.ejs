<div class="bg-gray-800 shadow-xl h-16 fixed bottom-0 mt-12 md:relative md:h-screen z-10 w-full md:w-48">

    <div class="md:mt-12 md:w-48 md:fixed md:left-0 md:top-0 content-center md:content-start text-left justify-between">
        <ul class="list-reset flex flex-row md:flex-col py-0 md:py-3 px-1 md:px-2 text-center md:text-left">

            
           <% pages.forEach(page => { %>
            
                <% if (('/merkez' == current_page) && page.merkez ) { %>
                    <li class="mr-3 flex-1 mt-6">
                        <a href="<%- page.path %>" class="<%- page.border_color %>">
                            <i class="fas fa-tasks pr-0 md:pr-3"></i><span class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block"><%- page.name %></span>
                        </a>
                    </li>
                <% } %>
                <% if (('/magaza' == current_page) && page.magaza) { %>
                    <li class="mr-3 flex-1 mt-6">
                        <a href="<%- page.path %>" class="<%- page.border_color %>">
                            <i class="fas fa-tasks pr-0 md:pr-3"></i><span class="pb-1 md:pb-0 text-xs md:text-base text-gray-600 md:text-gray-400 block md:inline-block"><%- page.name %></span>
                        </a>
                    </li>
                <% } %>

            
           <% }) %>
            
        </ul>
    </div>


</div>